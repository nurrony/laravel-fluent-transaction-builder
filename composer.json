{
  "authors": [
    {
      "email": "rony@nurrony.info",
      "homepage": "https://www.nurrony.info",
      "name": "Nur Rony"
    }
  ],
  "autoload": {
    "psr-4": {
      "FluentTransactionBuilder\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FluentTransactionBuilder\\Tests\\": "tests/"
    }
  },
  "description": "Fluent Transaction Builder to keep DB transaction sane and predictable",
  "extra": {
    "laravel": {
      "providers": [
        "FluentTransactionBuilder\\TransactionBuilderServiceProvider"
      ]
    }
  },
  "homepage": "https://github.com/nurrony/fluent-transaction-builder",
  "keywords": [
    "Nur Rony",
    "laravel",
    "fluent-transaction-builder",
    "transaction-builder",
    "laravel-transaction-builder",
    "FluentTransactionBuilder",
    "chainable transaction",
    "transaction",
    "database",
    "database transaction"
  ],
  "license": "MIT",
  "minimum-stability": "dev",
  "name": "nurrony/fluent-transaction-builder",
  "prefer-stable": true,
  "ramsey/conventional-commits": {
    "config": {
      "bodyRequired": false,
      "bodyWrapWidth": null,
      "descriptionCase": "lower",
      "descriptionEndMark": null,
      "requiredFooters": [],
      "scopeCase": null,
      "scopeRequired": false,
      "scopes": [],
      "typeCase": "lower",
      "types": [
        "fix",
        "feat",
        "docs",
        "ci",
        "style",
        "revert",
        "refactor",
        "perf",
        "test",
        "build",
        "chore"
      ]
    }
  },
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "captainhook/captainhook": "^5.25",
    "ext-pdo": "*",
    "fakerphp/faker": "^1.24",
    "laravel/pint": "1.20.0",
    "orchestra/testbench": "^8",
    "phpunit/php-code-coverage": "^10",
    "phpunit/phpunit": "^10",
    "ramsey/conventional-commits": "^1.6"
  },
  "scripts": {
    "coverage": [
      "rm -rf ./coverage",
      "echo 'âœ… Old coverage removed.'",
      "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html coverage",
      "echo 'ðŸ“Š New coverage report generated in ./coverage/'"
    ],
    "post-install-cmd": [
      "vendor/bin/captainhook install --quiet --no-interaction"
    ],
    "test": "phpunit"
  },
  "type": "package",
  "version": "1.0.0-alpha1"
}
